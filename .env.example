# Environment Variables

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/blogplatform"
DIRECT_URL="postgresql://username:password@localhost:5432/blogplatform"

# Redis
REDIS_URL="redis://localhost:6379"

# MongoDB (for analytics)
MONGODB_URI="mongodb://localhost:27017/blogplatform"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-nextauth-secret"

# Social Login Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
TWITTER_CLIENT_ID="your-twitter-client-id"
TWITTER_CLIENT_SECRET="your-twitter-client-secret"

# AI Services
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_MAX_TOKENS="4000"
OPENAI_TEMPERATURE="0.7"
ANTHROPIC_API_KEY="your-anthropic-api-key"
ANTHROPIC_MODEL="claude-3-opus-20240229"
ANTHROPIC_MAX_TOKENS="4000"
ANTHROPIC_TEMPERATURE="0.7"
GOOGLE_AI_API_KEY="your-google-ai-api-key"
GOOGLE_AI_MODEL="gemini-pro"
GOOGLE_AI_MAX_TOKENS="4000"
GOOGLE_AI_TEMPERATURE="0.7"
AZURE_OPENAI_API_KEY="your-azure-openai-api-key"
AZURE_OPENAI_MODEL="gpt-4"
AZURE_OPENAI_MAX_TOKENS="4000"
AZURE_OPENAI_TEMPERATURE="0.7"

# AI Service Limits
AI_DAILY_REQUESTS_LIMIT="1000"
AI_REQUESTS_PER_MINUTE_LIMIT="60"
AI_MAX_CONTENT_LENGTH="50000"

# Email Service
EMAIL_FROM="noreply@universalblogplatform.com"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# File Upload
UPLOADTHING_SECRET="your-uploadthing-secret"
UPLOADTHING_APP_ID="your-uploadthing-app-id"

# Analytics & Monitoring
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"

# Platform API Keys (Social Media)
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
INSTAGRAM_CLIENT_ID="your-instagram-client-id"
INSTAGRAM_CLIENT_SECRET="your-instagram-client-secret"
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET="your-twitter-api-secret"
YOUTUBE_API_KEY="your-youtube-api-key"
PINTEREST_CLIENT_ID="your-pinterest-client-id"
PINTEREST_CLIENT_SECRET="your-pinterest-client-secret"

# Blogging Platform APIs
MEDIUM_INTEGRATION_TOKEN="your-medium-token"
DEVTO_API_KEY="your-devto-api-key"
HASHNODE_API_KEY="your-hashnode-api-key"
WORDPRESS_API_KEY="your-wordpress-api-key"

# Search (Elasticsearch)
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_USERNAME="elastic"
ELASTICSEARCH_PASSWORD="your-elasticsearch-password"

# CDN & Storage
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Webhook URLs
WEBHOOK_SECRET="your-webhook-secret"

# Feature Flags
ENABLE_AI_FEATURES="true"
ENABLE_ANALYTICS="true"
ENABLE_PLATFORM_INTEGRATION="true"
ENABLE_REAL_TIME="true"

# Development
NODE_ENV="development"
LOG_LEVEL="debug"
